{
  "name": "automation-new",
  "version": "1.0.0",
  "description": "Automation test suite with Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test_headed": "playwright test --headed",
    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report",
    "test_report": "npm run test && npm run allure:generate && npm run allure:open",
    "test_report_headed": "npm run test_headed && npm run allure:generate && npm run allure:open"

  },
  "keywords": [],
  "author": "Syed Raiyan Nasim",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.3"
  }
}
